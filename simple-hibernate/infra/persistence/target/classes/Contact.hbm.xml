<?xml version="1.0" encoding="utf-8"?>
    <!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "Contact" table = "CONTACTS" >
        <meta attribute = "class-description" >
            This class contains the person contact details.
        </meta>
        <id name = "contactId" type = "int" column = "contact_id" >
            <generator class = "sequence-identity">
                <param name="sequence">CONTACT_ID_SEQ</param>
            </generator>
        </id>
        <property name = "roleName" column = "role_name" type = "string" />
        <property name="contactType">
          <type name="org.hibernate.type.EnumType">
             <param name="enumClass">crud.core.model.Contact</param>
          </type>
        </property>
        <property name = "number" column = "contact_number" type = "int" />
        <property name = "email" column = "contact_email" type = "string" />
    </class>
</hibernate-mapping>
